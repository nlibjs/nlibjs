{
    "private": true,
    "name": "nlibjs",
    "devDependencies": {
        "@commitlint/cli": "^7.2.1",
        "@commitlint/config-conventional": "^7.1.2",
        "@commitlint/config-lerna-scopes": "^7.2.1",
        "@nlib/lint": "file:packages/lint",
        "@types/eslint": "^4.16.5",
        "@types/node": "^10.12.18",
        "ava": "^1.0.1",
        "eslint": "^5.12.0",
        "eslint-plugin-typescript": "^0.14.0",
        "husky": "^1.3.1",
        "lerna": "^3.8.5",
        "lint-staged": "^8.1.0",
        "npm-run-all": "^4.1.5",
        "nyc": "^13.1.0",
        "rimraf": "^2.6.3",
        "ts-node": "^7.0.1",
        "typescript": "^3.2.2",
        "typescript-eslint-parser": "^21.0.2"
    },
    "scripts": {
        "init": "lerna bootstrap",
        "lerna:cleanup": "lerna run cleanup",
        "lerna:build": "lerna run build",
        "lerna:test": "nyc lerna run test",
        "cleanup": "npm run lerna:cleanup",
        "build": "npm-run-all --serial lerna:cleanup lerna:build",
        "test": "npm-run-all --serial lerna:cleanup lerna:build lerna:test",
        "lint": "lerna run lint",
        "bump": "lerna version --conventional-commits --sign-git-commit --sign-git-tag"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "nyc": {
        "include": [
            "packages/*/lib/**/*.js"
        ],
        "exclude": [
            "packages/*/lib/**/*.test.js"
        ],
        "all": true,
        "reporter": [
            "lcov",
            "html",
            "text",
            "text-summary"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional",
            "@commitlint/config-lerna-scopes"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    }
}

{
    "private": true,
    "devDependencies": {
        "@commitlint/cli": "^7.2.1",
        "@commitlint/config-conventional": "^7.1.2",
        "@commitlint/config-lerna-scopes": "^7.2.1",
        "@types/eslint": "^4.16.5",
        "@types/node": "^10.12.18",
        "ava": "^1.0.1",
        "eslint": "^5.10.0",
        "husky": "^1.3.0",
        "lerna": "^3.7.1",
        "npm-run-all": "^4.1.5",
        "ts-node": "^7.0.1",
        "typescript": "^3.2.2"
    },
    "name": "nlibjs",
    "scripts": {
        "init": "lerna bootstrap",
        "lerna:cleanup": "lerna run cleanup",
        "lerna:build": "lerna run build",
        "lerna:test": "lerna run test",
        "cleanup": "npm run lerna:cleanup",
        "build": "npm-run-all --serial lerna:cleanup lerna:build",
        "test": "npm-run-all --serial lerna:cleanup lerna:build lerna:test"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}

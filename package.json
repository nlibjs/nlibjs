{
    "private": true,
    "license": "Apache-2.0",
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@commitlint/config-lerna-scopes": "^8.0.0",
        "@types/eslint": "^4.16.6",
        "@types/node": "^12.6.2",
        "@types/semver": "^6.0.1",
        "@typescript-eslint/eslint-plugin": "^1.12.0",
        "@typescript-eslint/parser": "^1.11.0",
        "ava": "^2.1.0",
        "eslint": "^6.0.1",
        "globby": "^10.0.1",
        "husky": "^3.0.0",
        "lerna": "^3.15.0",
        "lint-staged": "^9.2.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.3",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.3"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "cleanup": "lerna run cleanup",
        "lerna:build": "lerna run build",
        "build": "run-s bootstrap lerna:build",
        "test": "lerna run test --parallel",
        "lint": "lerna run lint --parallel",
        "bump": "lerna version --conventional-commits --sign-git-commit --sign-git-tag --no-push"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "eslintConfig": {
        "extends": "./packages-core/lint/.eslintrc.json",
        "env": {
            "es6": true
        },
        "rules": {
            "no-restricted-syntax": [
                "error",
                {
                    "selector": "FunctionExpression[async=true][generator=true]",
                    "message": "Async generator is restricted."
                },
                {
                    "selector": "FunctionDeclaration[async=true][generator=true]",
                    "message": "Async generator is restricted."
                },
                {
                    "selector": "ForOfStatement[await=true]",
                    "message": "for await...of statement is restricted."
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "**/*.test.ts"
                ],
                "env": {
                    "node": true
                }
            },
            {
                "files": [
                    "scripts/**/*.ts"
                ],
                "env": {
                    "node": true
                },
                "rules": {
                    "no-console": "off",
                    "global-require": "off",
                    "@typescript-eslint/no-require-imports": "off"
                }
            },
            {
                "files": [
                    "packages-node/**/*.ts",
                    "packages-*/**/bin/*"
                ],
                "env": {
                    "node": true
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional",
            "@commitlint/config-lerna-scopes"
        ],
        "rules": {
            "subject-case": [
                0
            ],
            "scope-enum": [
                2,
                "always",
                [
                    "cookie",
                    "fetch",
                    "global",
                    "infra",
                    "lint",
                    "match",
                    "media-type",
                    "named-tree",
                    "nbnf",
                    "number",
                    "real-number",
                    "replacement-function",
                    "unicode",
                    "util",
                    "xml-js",
                    "afs",
                    "nlib-util",
                    "node-net",
                    "node-stream",
                    "node-util",
                    "deps",
                    "repo"
                ]
            ]
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}

{
    "private": true,
    "devDependencies": {
        "@commitlint/cli": "^7.3.2",
        "@commitlint/config-conventional": "^7.3.1",
        "@commitlint/config-lerna-scopes": "^7.3.1",
        "@nlib/lint": "file:packages-hybrid/lint",
        "@types/eslint": "^4.16.5",
        "@types/node": "^10.12.18",
        "@typescript-eslint/eslint-plugin": "^1.1.0",
        "ava": "^1.1.0",
        "eslint": "^5.12.1",
        "glob": "^7.1.3",
        "husky": "^1.3.1",
        "lerna": "^3.10.7",
        "lint-staged": "^8.1.0",
        "npm-run-all": "^4.1.5",
        "nyc": "^13.1.0",
        "rimraf": "^2.6.3",
        "ts-node": "^8.0.2",
        "typescript": "^3.2.4"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "cleanup": "lerna run cleanup",
        "fill-json": "ts-node ./scripts/fix-package.json.ts",
        "check-dependencies": "ts-node scripts/checkDependencies.ts",
        "lerna:clear-cache": "lerna run clear-cache",
        "lerna:build": "lerna run build",
        "lerna:test": "nyc lerna run test",
        "build": "npm-run-all --serial lerna:clear-cache lerna:build fill-json",
        "test": "npm-run-all --serial lerna:build lerna:test check-dependencies",
        "lint": "lerna run lint",
        "bump": "lerna version --conventional-commits --sign-git-commit --sign-git-tag --no-push"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "nyc": {
        "include": [
            "packages-*/*/lib/**/*.js"
        ],
        "exclude": [
            "packages-*/*/lib/**/*.test.js"
        ],
        "all": true,
        "reporter": [
            "lcov",
            "html",
            "text",
            "text-summary"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "overrides": [
            {
                "files": [
                    "packages-hybrid/**/*.ts"
                ],
                "env": {
                    "es6": true
                }
            },
            {
                "files": [
                    "packages-client/**/*.ts"
                ],
                "env": {
                    "es6": true,
                    "browser": true
                }
            },
            {
                "files": [
                    "packages-node/**/*.ts"
                ],
                "env": {
                    "es6": true,
                    "node": true
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "env": {
                    "node": true
                }
            },
            {
                "files": [
                    "scripts/*.ts"
                ],
                "env": {
                    "es6": true,
                    "node": true
                },
                "rules": {
                    "no-console": "off",
                    "@typescript-eslint/no-var-requires": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional",
            "@commitlint/config-lerna-scopes"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    }
}

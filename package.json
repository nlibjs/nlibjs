{
    "private": true,
    "name": "@nlib/nlib",
    "license": "Apache-2.0",
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@commitlint/config-lerna-scopes": "^8.2.0",
        "@nlib/indexen": "file:packages-node/indexen",
        "@types/eslint": "^6.1.3",
        "@types/node": "^12.12.18",
        "@types/semver": "^6.2.0",
        "@typescript-eslint/eslint-plugin": "^2.12.0",
        "@typescript-eslint/parser": "^2.12.0",
        "ava": "^2.4.0",
        "eslint": "^6.7.2",
        "globby": "^10.0.1",
        "husky": "^3.1.0",
        "lerna": "^3.19.0",
        "lint-staged": "^9.5.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.0",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.3"
    },
    "scripts": {
        "prepare": "lerna bootstrap",
        "cleanup": "lerna run cleanup",
        "build": "lerna run build",
        "test": "lerna run test",
        "lint": "lerna run lint",
        "bump": "lerna version --conventional-commits --sign-git-commit --sign-git-tag --no-push"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": "./packages-core/lint/.eslintrc.json",
        "env": {
            "es6": true
        },
        "rules": {
            "no-restricted-syntax": [
                "error",
                {
                    "selector": "FunctionExpression[async=true][generator=true]",
                    "message": "Async generator is restricted."
                },
                {
                    "selector": "FunctionDeclaration[async=true][generator=true]",
                    "message": "Async generator is restricted."
                },
                {
                    "selector": "ForOfStatement[await=true]",
                    "message": "for await...of statement is restricted."
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "env": {
                    "node": true
                }
            },
            {
                "files": [
                    "packages-node/**/*.ts",
                    "packages-*/*/build/**",
                    "packages-*/*/bin/**"
                ],
                "env": {
                    "node": true
                },
                "rules": {
                    "no-console": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional",
            "@commitlint/config-lerna-scopes"
        ],
        "rules": {
            "subject-case": [
                0
            ],
            "scope-enum": [
                2,
                "always",
                [
                    "cookie",
                    "fetch",
                    "global",
                    "infra",
                    "lint",
                    "match",
                    "media-type",
                    "named-tree",
                    "nbnf",
                    "number",
                    "real-number",
                    "replacement-function",
                    "unicode",
                    "util",
                    "xml-js",
                    "afs",
                    "indexen",
                    "nlib-util",
                    "node-net",
                    "node-stream",
                    "node-util",
                    "remove-sourcemap",
                    "deps",
                    "repo"
                ]
            ]
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}

    },
    "homepage": "https://github.com/nlibjs/nlibjs/tree/master/packages-node/afs",
    "repository": "https://github.com/nlibjs/nlibjs",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=8.15"
    },
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "cleanup": "rimraf lib",
        "build:index": "indexen-ts src --dest src/index.ts",
        "build:tsc": "tsc",
        "build": "run-s build:index build:tsc",
        "test": "ava",
        "lint": "eslint --ext .ts src",
        "prepack": "node -e 'require(`@nlib/nlib-util`).prepack()'"
    },
    "dependencies": {
        "@nlib/node-util": "^3.16.0",
        "@nlib/util": "^3.16.0",
        "semver": "^7.0.0"
    },
    "eslintConfig": {
        "overrides": [
            {
                "files": [
                    "src/core.ts"
                ],
                "rules": {
                    "prefer-destructuring": "off",
                    "@typescript-eslint/no-unnecessary-condition": "off"
                }
            },
            {
                "files": [
                    "src/tree.test.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-unnecessary-condition": "off"
                }
            }
        ]
    }

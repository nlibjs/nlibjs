{
    "name": "@nlib/global",
    "version": "3.17.1",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/nlibjs/tree/master/packages-core/global",
    "repository": "https://github.com/nlibjs/nlibjs",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=10"
    },
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "cleanup": "rimraf lib",
        "build": "tsc",
        "test": "ava",
        "lint": "eslint --ext .ts src",
        "prepack": "node -e 'require(`@nlib/nlib-util`).prepack()'",
        "precommit": "lint-staged"
    },
    "eslintConfig": {
        "overrides": [
            {
                "files": [
                    "src/index.ts"
                ],
                "globals": {
                    "Atomics": true,
                    "BigInt": true,
                    "BigInt64Array": true,
                    "BigUint64Array": true,
                    "Intl": true,
                    "SharedArrayBuffer": true,
                    "URL": true,
                    "URLSearchParams": true,
                    "WebAssembly": true,
                    "clearInterval": true,
                    "clearTimeout": true,
                    "console": true,
                    "setInterval": true,
                    "setTimeout": true
                },
                "rules": {
                    "max-statements-per-line": "off",
                    "no-eval": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    }
}

{
    "name": "@nlib/global",
    "version": "3.8.0",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/nlibjs/tree/master/packages-core/global",
    "repository": "https://github.com/nlibjs/nlibjs",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=8.15"
    },
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "cleanup": "rimraf lib",
        "build": "tsc",
        "test": "ava",
        "lint": "eslint --ext .ts src"
    },
    "eslintConfig": {
        "env": {
            "es6": true
        },
        "globals": {
            "Atomics": true,
            "BigInt": true,
            "BigInt64Array": true,
            "BigUint64Array": true,
            "Intl": true,
            "SharedArrayBuffer": true,
            "URL": true,
            "URLSearchParams": true,
            "WebAssembly": true,
            "clearInterval": true,
            "clearTimeout": true,
            "console": true,
            "setInterval": true,
            "setTimeout": true
        },
        "rules": {
            "max-statements-per-line": "off",
            "no-eval": "off"
        },
        "overrides": [
            {
                "files": [
                    "src/index.test.ts"
                ],
                "env": {
                    "node": true
                }
            }
        ]
    }
}

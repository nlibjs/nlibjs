{
    "name": "@nlib/nbnf",
    "version": "3.17.1",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/nlibjs/tree/master/packages-core/nbnf",
    "repository": "https://github.com/nlibjs/nlibjs",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=10"
    },
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "cleanup": "rimraf lib",
        "build:index": "indexen-ts src --dest src/index.ts",
        "build:tsc": "tsc",
        "build": "run-s build:index build:tsc",
        "test": "ava",
        "lint": "eslint --ext .ts src",
        "prepack": "node -e 'require(`@nlib/nlib-util`).prepack()'",
        "precommit": "lint-staged"
    },
    "dependencies": {
        "@nlib/global": "^3.17.1",
        "@nlib/infra": "^3.17.1",
        "@nlib/number": "^3.17.1",
        "@nlib/real-number": "^3.17.1",
        "@nlib/util": "^3.17.1"
    },
    "eslintConfig": {
        "rules": {
            "max-lines-per-function": "off",
            "no-loop-func": "off",
            "no-control-regex": "off"
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-empty-function": "off"
                }
            },
            {
                "files": [
                    "src/parse/Digits.ts"
                ],
                "rules": {
                    "no-bitwise": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    }
}

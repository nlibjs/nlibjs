{
    "name": "@nlib/media-type",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.2.0",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "cleanup": "rimraf lib",
        "build:constants": "ts-node build/constants.ts",
        "tsc": "tsc",
        "build": "npm-run-all --serial build:constants cleanup tsc",
        "test": "ava --verbose lib/*.test.js",
        "lint": "eslint --ext .ts src build"
    },
    "dependencies": {
        "@nlib/fetch": "^3.2.0",
        "@nlib/global": "^3.2.0",
        "@nlib/infra": "^3.2.0",
        "@nlib/real-number": "^3.2.0"
    },
    "devDependencies": {
        "@nlib/afs": "^3.2.0",
        "@nlib/node-util": "^3.2.0",
        "@nlib/xml-js": "^3.2.0"
    },
    "eslintConfig": {
        "overrides": [
            {
                "files": "build/*.ts",
                "env": {
                    "node": true
                },
                "rules": {
                    "no-console": "off"
                }
            },
            {
                "files": "src/*.ts",
                "env": {
                    "node": true
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "no-loop-func": "off"
                }
            }
        ]
    }
}
